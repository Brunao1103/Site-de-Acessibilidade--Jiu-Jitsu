  <script>
    function aumentarFonte() {
      let tamanhoAtual = window.getComputedStyle(document.body).fontSize;
      document.body.style.fontSize = (parseFloat(tamanhoAtual) + 2) + 'px';
    }

    function diminuirFonte() {
      let tamanhoAtual = window.getComputedStyle(document.body).fontSize;
      document.body.style.fontSize = (parseFloat(tamanhoAtual) - 2) + 'px';
    }

    function alternarContraste() {
      document.body.classList.toggle('alto-contraste');
    }

    function sublinhadoLinks() {
      document.body.classList.toggle('sublinhado');
    }

    function modoNoturno() {
      document.body.classList.toggle('noturno');
    }
  </script>
